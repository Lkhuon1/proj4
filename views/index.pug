extends layout.pug

block content
  h1.mt-5 Books
    a.btn.btn-primary(href='./books/new') New
  table.table
    thead
      tr
        th(scope='col') Title
        th(scope='col') Author 
        th(scope='col')
    tbody
      each book in books
        tr
          td= product.title
          td= product.author
          td
            a.btn.btn-primary(href='./books/' + book.id) View
            form(action='/books/' + book.id + '/delete' method="POST")
              button.btn.btn-danger(type='submit') Delete
